{{!< default}}

{{> "site-header"}}

{{#post}}
  <main role="main">
    <article class="{{post_class}}">
      <header>
        <h1>
          {{{title}}}
        </h1>
        <time datetime="{{date format="YYYY-MM-DD"}}">
          {{date format='DD MMM YYYY'}}
        </time>
        {{tags prefix=(t " on ") separator=" | "}}
        {{#if feature_image}}
          <figure>
            <img src="{{feature_image}}">
          </figure>
        {{/if}}
      </header>
      <section>
        {{content}}
      </section>
      <footer>
        <section>
          {{#if author.profile_image}}
            <figure>
              <img src="{{author.profile_image}}" alt="{{{t '{name}â€™s Picture' name=name }}}">
            </figure>
          {{/if}}
          <h4>
            {{author.name}}
          </h4>
          <p>
            {{author.bio}}
          </p>
          <ul>
            {{#if author.location}}
              <li>
                {{author.location}}
              </li>
            {{/if}}
            {{#if author.website}}
              <li>
                <a href="{{author.website}}">
                  {{author.website}}
                </a>
              </li>
            {{/if}}
          </ul>
        </section>
        <section>
          {{t "Share this post"}}
          <a href="https://twitter.com/share?text={{encode title}}&amp;url={{url absolute="true"}}"
            onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;">
            {{t "Twitter"}}
          </a>
          {{t " or "}}
          <a href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}"
            onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;">
            {{t "Facebook"}}
          </a>
        </section>
      </footer>
    </article>
  </main>
{{/post}}
